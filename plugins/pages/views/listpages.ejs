<% include ../../../views/partials/header %>
<style>
    p { white-space: pre-line; }
    .givemespace { margin: 15px 0px; padding: 25px 30px 20px}
    h4 { display: inline; margin-right: 5px }
</style>
<div class="border border-secondary rounded givemespace">
    <h1>Page Management</h1>
    <a style='display: inline' href='/admin/addpage' class='btn btn-primary' role='button'>Add Page</a> <br> <br> <!-- idk why the first br does nothing /shrug -->
    <% for(let i = pages.length; i > 0; i--) { %>
        <div style="margin: 1px 0px">
            <%- "<h4><a href='/viewpage/" + pages[i - 1]._id + "'>" + pages[i - 1].name + "</a><h4>"%>
            <%- "<a style='display: inline' href='/admin/editpage/" + pages[i - 1]._id + "' class='btn btn-primary' role='button'>Edit</a>" %>
            <%- "<a style='display: inline' href='/processing/deletepage/" + pages[i - 1]._id + "' class='btn btn-primary' role='button'>Delete</a> "%>
        </div>
        <br>
    <% } %>
</div>
</div>
