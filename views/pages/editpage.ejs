<% include ../partials/header %>

<div class="border border-secondary rounded givemespace">
    <h3>Edit Page</h3>
    <%- "<form action='/processing/editPage/" + page._id + "' method='POST'>" %>
        <div class="form-group">
           <%- "<input type='text' class='form-control' name='name' placeholder='Name' value='" + page.name + "'>" %>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="body" placeholder="Body" rows="6"><%- page.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% include ../partials/footer %>