<% include ./partials/header %>

<div class="border border-secondary rounded givemespace">
    <h3>Edit Post</h3>
    <%- "<form action='/processing/editPost/" + post._id + "' method='POST'>" %>
        <div class="form-group">
           <%- "<input type='text' class='form-control' name='name' placeholder='Name' value='" + post.name + "'>" %>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="body" placeholder="Body" rows="6"><%- post.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% include ./partials/footer %>